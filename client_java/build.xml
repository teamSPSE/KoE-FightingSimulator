<project name="UPSSemestral" default="build" basedir=".">
  <target name="build" depends="client">
    <echo message="${basedir}"/>
  </target>
  <target name="client" depends="clean">
    <echo message="Prekladam clienta"/>
    <exec executable="javac" dir="${basedir}">
      <arg value="src/*.java"/>
    </exec>
    <move todir="bin">
      <fileset dir="src">
        <include name="*.class"/>
        <exclude name="*.java"/>
      </fileset>
    </move>
    <jar destfile="../SwordAndSandals.jar"
         basedir="${basedir}/bin"
         includes="*.class">
      <manifest>
        <attribute name="Main-Class" value="Main"/>
      </manifest>
    </jar>
  </target>
  <target name="clean" depends="">
    <echo message="Mazu binarky..."/>
    <exec executable="rm" dir="${basedir}">
      <arg value="-f"/>
      <arg value="*.class"/>
    </exec>
  </target>
</project>